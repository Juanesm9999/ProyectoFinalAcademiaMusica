<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.poo.proyectofinalmusica.ViewController.EstudianteDashboardViewController"
      alignment="CENTER" spacing="20" style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <VBox alignment="CENTER" spacing="25" maxWidth="900"
          style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 25, 0, 0, 5);">

        <padding>
            <Insets top="30" right="40" bottom="30" left="40"/>
        </padding>

        <!-- Header -->
        <VBox alignment="CENTER" spacing="8">
            <Label text="" style="-fx-font-size: 50px;"/>
            <Label fx:id="lblBienvenida" text="Bienvenido, Estudiante"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #667eea;"/>
            <Label fx:id="lblMatricula" text="Matr铆cula: "
                   style="-fx-font-size: 14px; -fx-text-fill: #666;"/>
            <Label fx:id="lblEmail" text="Email: "
                   style="-fx-font-size: 14px; -fx-text-fill: #666;"/>
        </VBox>

        <Separator prefWidth="800"/>

        <!-- Estad铆sticas -->
        <HBox spacing="30" alignment="CENTER">
            <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #3498db; -fx-padding: 20; -fx-background-radius: 10;">
                <Label fx:id="lblNumeroInscripciones" text="Inscripciones activas: 0"
                       style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
            </VBox>

            <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #27ae60; -fx-padding: 20; -fx-background-radius: 10;">
                <Label fx:id="lblPromedioGeneral" text="Promedio General: 0.00"
                       style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
            </VBox>
        </HBox>

        <!-- Informaci贸n -->
        <HBox spacing="20" alignment="CENTER">
            <!-- Inscripciones Activas -->
            <VBox spacing="10" prefWidth="380">
                <Label text="Mis Cursos Inscritos" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <ListView fx:id="lstInscripciones" prefHeight="200"
                          style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ddd;"/>
            </VBox>

            <!-- Niveles Aprobados -->
            <VBox spacing="10" prefWidth="380">
                <Label text="Niveles Aprobados" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <ListView fx:id="lstNivelesAprobados" prefHeight="200"
                          style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ddd;"/>
            </VBox>
        </HBox>

        <Separator prefWidth="800"/>

        <!-- Botones de Acci贸n -->
        <HBox spacing="15" alignment="CENTER">
            <Button fx:id="btnInscribirseCurso" text=" Inscribirse a Curso" onAction="#onInscribirseCurso"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px;
                           -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 25;"/>

            <Button fx:id="btnVerHorario" text=" Ver Horario" onAction="#onVerHorario"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px;
                           -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 25;"/>

            <Button fx:id="btnVerAsistencia" text=" Ver Asistencia" onAction="#onVerAsistencia"
                    style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 14px;
                           -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 25;"/>

            <Button fx:id="btnVerEvaluaciones" text=" Ver Evaluaciones" onAction="#onVerEvaluaciones"
                    style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 14px;
                           -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 25;"/>
        </HBox>

        <Separator prefWidth="800"/>

        <!-- Cerrar Sesi贸n -->
        <Button fx:id="btnCerrarSesion" text="Cerrar Sesi贸n" onAction="#onCerrarSesion"
                style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 30;"
                prefWidth="200"/>
    </VBox>
</VBox>