<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.proyectofinalmusica.ViewController.AulaViewController"
            fitToWidth="true" fitToHeight="true" style="-fx-background-color: #f5f5f5;">
    <VBox spacing="15" style="-fx-background-color: #f5f5f5;">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

    <HBox alignment="CENTER">
        <Label text="Gestión de Aulas" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    </HBox>

    <Separator/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints minWidth="120" prefWidth="120"/>
            <ColumnConstraints minWidth="250" prefWidth="250"/>
        </columnConstraints>

        <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtId" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="ID del aula"/>

        <Label text="Código:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtCodigo" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="Ej: A101"/>

        <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtNombre" GridPane.columnIndex="1" GridPane.rowIndex="2" promptText="Nombre del aula"/>

        <Label text="Ubicación:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtUbicacion" GridPane.columnIndex="1" GridPane.rowIndex="3" promptText="Edificio, piso, etc."/>

        <Label text="Capacidad:" GridPane.columnIndex="0" GridPane.rowIndex="4" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtCapacidad" GridPane.columnIndex="1" GridPane.rowIndex="4" promptText="Número de personas"/>

        <Label text="Estado:" GridPane.columnIndex="0" GridPane.rowIndex="5" style="-fx-font-weight: bold;"/>
        <CheckBox fx:id="chkDisponible" text="Disponible" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnAgregar" text="Agregar" onAction="#onAgregar"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="100"/>
        <Button fx:id="btnActualizar" text="Actualizar" onAction="#onActualizar"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="100"/>
        <Button fx:id="btnEliminar" text="Eliminar" onAction="#onEliminar"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="100"/>
        <Button fx:id="btnLimpiar" text="Limpiar" onAction="#onLimpiar"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="100"/>
    </HBox>

    <Separator/>

    <VBox VBox.vgrow="ALWAYS">
        <Label text="Lista de Aulas" style="-fx-font-size: 16px; -fx-font-weight: bold;">
            <padding><Insets bottom="5"/></padding>
        </Label>

        <TableView fx:id="tblAulas" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="tbcCodigo" text="Código" prefWidth="100"/>
                <TableColumn fx:id="tbcNombre" text="Nombre" prefWidth="200"/>
                <TableColumn fx:id="tbcUbicacion" text="Ubicación" prefWidth="200"/>
                <TableColumn fx:id="tbcCapacidad" text="Capacidad" prefWidth="100"/>
                <TableColumn fx:id="tbcEstado" text="Estado" prefWidth="120"/>
            </columns>
        </TableView>
    </VBox>

    <HBox alignment="CENTER_RIGHT">
        <Button fx:id="btnRegresar" text="Regresar" onAction="#onRegresar"
                style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="100"/>
    </HBox>
    </VBox>
</ScrollPane>