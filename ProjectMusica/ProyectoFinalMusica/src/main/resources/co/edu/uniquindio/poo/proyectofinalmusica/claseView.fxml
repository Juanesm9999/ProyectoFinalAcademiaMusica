<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.proyectofinalmusica.ViewController.ClaseViewController"
            fitToWidth="true" fitToHeight="true" style="-fx-background-color: #f5f5f5;">
    <VBox spacing="15" style="-fx-background-color: #f5f5f5;">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

    <HBox alignment="CENTER">
        <Label text="Gestión de Clases" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    </HBox>

    <Separator/>

    <ScrollPane fitToWidth="true" style="-fx-background: transparent;">
        <VBox spacing="15">
            <!-- Datos Generales -->
            <VBox spacing="10" style="-fx-background-color: #404040; -fx-padding: 15; -fx-background-radius: 8;">
                <Label text="Datos Generales" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="120" prefWidth="120"/>
                        <ColumnConstraints minWidth="200" prefWidth="200"/>
                        <ColumnConstraints minWidth="120" prefWidth="120"/>
                        <ColumnConstraints minWidth="200" prefWidth="200"/>
                    </columnConstraints>

                    <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtId" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Tipo de Clase:" GridPane.columnIndex="2" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
                    <ComboBox fx:id="cmbTipoClase" GridPane.columnIndex="3" GridPane.rowIndex="0" prefWidth="200"/>

                    <Label text="Instrumento:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
                    <ComboBox fx:id="cmbInstrumento" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200"/>

                    <Label text="Nivel:" GridPane.columnIndex="2" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
                    <Spinner fx:id="spnNivel" GridPane.columnIndex="3" GridPane.rowIndex="1" prefWidth="200" editable="true"/>

                    <Label text="Día:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
                    <ComboBox fx:id="cmbDiaSemana" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="200"/>

                    <Label text="Horario:" GridPane.columnIndex="2" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtHorario" GridPane.columnIndex="3" GridPane.rowIndex="2" promptText="Ej: 8:00-10:00"/>

                    <Label text="Hora Inicio:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtHoraInicio" GridPane.columnIndex="1" GridPane.rowIndex="3" promptText="08:00"/>

                    <Label text="Hora Fin:" GridPane.columnIndex="2" GridPane.rowIndex="3" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtHoraFin" GridPane.columnIndex="3" GridPane.rowIndex="3" promptText="10:00"/>

                    <Label text="Curso:" GridPane.columnIndex="0" GridPane.rowIndex="4" style="-fx-font-weight: bold;"/>
                    <ComboBox fx:id="cmbCurso" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="200"/>
                    
                    <Label text="Aula:" GridPane.columnIndex="2" GridPane.rowIndex="4" style="-fx-font-weight: bold;"/>
                    <ComboBox fx:id="cmbAula" GridPane.columnIndex="3" GridPane.rowIndex="4" prefWidth="200"/>
                    
                    <Label text="Estado:" GridPane.columnIndex="0" GridPane.rowIndex="5" style="-fx-font-weight: bold;"/>
                    <CheckBox fx:id="chkActiva" text="Activa" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                </GridPane>
            </VBox>

            <!-- Campos Específicos para Clase Grupal -->
            <VBox spacing="10" style="-fx-background-color: #48fd00; -fx-padding: 15; -fx-background-radius: 8;">
                <Label text="Clase Grupal" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="150" prefWidth="150"/>
                        <ColumnConstraints minWidth="400" prefWidth="400"/>
                    </columnConstraints>

                    <Label text="Capacidad Máxima:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtCapacidadMaxima" GridPane.columnIndex="1" GridPane.rowIndex="0"
                               promptText="Número de estudiantes" disable="true"/>

                    <Label text="Descripción:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
                    <TextArea fx:id="txtDescripcion" GridPane.columnIndex="1" GridPane.rowIndex="1"
                              prefRowCount="3" wrapText="true" disable="true"/>
                </GridPane>
            </VBox>

            <!-- Campos Específicos para Clase Individual -->
            <VBox spacing="10" style="-fx-background-color: #7a00fd; -fx-padding: 15; -fx-background-radius: 8;">
                <Label text="Clase Individual" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="150" prefWidth="150"/>
                        <ColumnConstraints minWidth="400" prefWidth="400"/>
                    </columnConstraints>

                    <Label text="Tema Específico:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtTemaEspecifico" GridPane.columnIndex="1" GridPane.rowIndex="0" disable="true"/>

                    <Label text="Objetivos:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtObjetivos" GridPane.columnIndex="1" GridPane.rowIndex="1" disable="true"/>

                    <Label text="Observaciones:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
                    <TextArea fx:id="txtObservaciones" GridPane.columnIndex="1" GridPane.rowIndex="2"
                              prefRowCount="3" wrapText="true" disable="true"/>
                </GridPane>
            </VBox>
        </VBox>
    </ScrollPane>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnAgregar" text="Agregar" onAction="#onAgregar"
                style="-fx-background-color: #27ae60; -fx-text-fill: #fdfdfd; -fx-font-weight: bold;" prefWidth="100"/>
        <Button fx:id="btnActualizar" text="Actualizar" onAction="#onActualizar"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="100"/>
        <Button fx:id="btnLimpiar" text="Limpiar" onAction="#onLimpiar"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="100"/>
        <Button fx:id="btnEliminar" text="Eliminar" onAction="#onEliminar"
                style="-fx-background-color: #c41919; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="100"/>

    </HBox>

    <Separator/>

    <VBox VBox.vgrow="ALWAYS">
        <Label text="Lista de Clases" style="-fx-font-size: 16px; -fx-font-weight: bold;">
            <padding><Insets bottom="5"/></padding>
        </Label>

        <TableView fx:id="tblClases" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="tbcId" text="ID" prefWidth="70"/>
                <TableColumn fx:id="tbcTipo" text="Tipo" prefWidth="80"/>
                <TableColumn fx:id="tbcInstrumento" text="Instrumento" prefWidth="100"/>
                <TableColumn fx:id="tbcCurso" text="Curso" prefWidth="150"/>
                <TableColumn fx:id="tbcNivel" text="Nivel" prefWidth="60"/>
                <TableColumn fx:id="tbcDia" text="Día" prefWidth="90"/>
                <TableColumn fx:id="tbcHorario" text="Horario" prefWidth="110"/>
                <TableColumn fx:id="tbcAula" text="Aula" prefWidth="90"/>
                <TableColumn fx:id="tbcEstado" text="Estado" prefWidth="80"/>
            </columns>
        </TableView>
    </VBox>

    <HBox alignment="CENTER_RIGHT">
        <Button fx:id="btnRegresar" text="Regresar" onAction="#onRegresar"
                style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="100"/>
    </HBox>
    </VBox>
</ScrollPane>