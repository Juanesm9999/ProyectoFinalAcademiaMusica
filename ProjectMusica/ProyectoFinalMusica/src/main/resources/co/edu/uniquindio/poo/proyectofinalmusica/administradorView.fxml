<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.poo.proyectofinalmusica.ViewController.AdministradorViewController"
      spacing="15" style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox alignment="CENTER">
        <Label text="Gestión de Administradores"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    </HBox>

    <Separator/>

    <GridPane hgap="12" vgap="12">
        <columnConstraints>
            <ColumnConstraints minWidth="130" prefWidth="130"/>
            <ColumnConstraints minWidth="220" prefWidth="220"/>
            <ColumnConstraints minWidth="130" prefWidth="130"/>
            <ColumnConstraints minWidth="220" prefWidth="220"/>
        </columnConstraints>

        <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtId" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="Identificación"/>

        <Label text="Nombre:" GridPane.columnIndex="2" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtNombre" GridPane.columnIndex="3" GridPane.rowIndex="0" promptText="Nombre completo"/>

        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="correo@ejemplo.com"/>

        <Label text="Teléfono:" GridPane.columnIndex="2" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtTelefono" GridPane.columnIndex="3" GridPane.rowIndex="1" promptText="Número de contacto"/>

        <Label text="Dirección:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtDireccion" GridPane.columnIndex="1" GridPane.rowIndex="2" promptText="Dirección completa"/>

        <Label text="Fecha Nacimiento:" GridPane.columnIndex="2" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
        <DatePicker fx:id="dpFechaNacimiento" GridPane.columnIndex="3" GridPane.rowIndex="2" prefWidth="220"/>

        <Label text="Cargo:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtCargo" GridPane.columnIndex="1" GridPane.rowIndex="3" promptText="Director, Coordinador..."/>

        <Label text="Departamento:" GridPane.columnIndex="2" GridPane.rowIndex="3" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtDepartamento" GridPane.columnIndex="3" GridPane.rowIndex="3" promptText="Área responsable"/>

        <Label text="Fecha Ingreso:" GridPane.columnIndex="0" GridPane.rowIndex="4" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtFechaIngreso" GridPane.columnIndex="1" GridPane.rowIndex="4" promptText="AAAA-MM-DD"/>

        <Label text="Usuario:" GridPane.columnIndex="2" GridPane.rowIndex="4" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtUsuario" GridPane.columnIndex="3" GridPane.rowIndex="4" promptText="usuario123"/>

        <Label text="Contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="5" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtContrasenia" GridPane.columnIndex="1" GridPane.rowIndex="5" promptText="********"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnAgregar" text="Agregar" onAction="#onAgregar"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="120"/>
        <Button fx:id="btnActualizar" text="Actualizar" onAction="#onActualizar"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="120"/>
        <Button fx:id="btnEliminar" text="Eliminar" onAction="#onEliminar"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="120"/>
        <Button fx:id="btnLimpiar" text="Limpiar" onAction="#onLimpiar"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="120"/>
    </HBox>

    <Separator/>

    <VBox VBox.vgrow="ALWAYS">
        <Label text="Lista de Administradores" style="-fx-font-size: 16px; -fx-font-weight: bold;">
            <padding><Insets bottom="5"/></padding>
        </Label>

        <TableView fx:id="tblListAdministradores" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="tbcId" text="ID" prefWidth="100"/>
                <TableColumn fx:id="tbcNombre" text="Nombre" prefWidth="160"/>
                <TableColumn fx:id="tbcEmail" text="Email" prefWidth="180"/>
                <TableColumn fx:id="tbcTelefono" text="Teléfono" prefWidth="120"/>
                <TableColumn fx:id="tbcDireccion" text="Dirección" prefWidth="180"/>
                <TableColumn fx:id="tbcCargo" text="Cargo" prefWidth="120"/>
                <TableColumn fx:id="tbcDepartamento" text="Departamento" prefWidth="140"/>
                <TableColumn fx:id="tbcFechaIngreso" text="Fecha Ingreso" prefWidth="130"/>
            </columns>
        </TableView>
    </VBox>

    <HBox alignment="CENTER_RIGHT">
        <Button fx:id="btnRegresarMenu" text="Regresar al Panel" onAction="#onRegresarMenu"
                style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="160"/>
    </HBox>
</VBox>
