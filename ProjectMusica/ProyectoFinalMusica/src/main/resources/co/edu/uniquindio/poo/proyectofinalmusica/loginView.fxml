<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.poo.proyectofinalmusica.ViewController.LoginViewController"
      alignment="CENTER" spacing="20" style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);">

    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <!-- Panel de Login -->
    <VBox alignment="CENTER" spacing="25" maxWidth="450"
          style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0, 0, 5);">

        <padding>
            <Insets top="40" right="40" bottom="40" left="40"/>
        </padding>

        <!-- Logo y T칤tulo -->
        <VBox alignment="CENTER" spacing="10">
            <Label text="游꿧" style="-fx-font-size: 50px;"/>
            <Label text="Academia UQ M칰sica" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #667eea;"/>
            <Label text="Sistema de Gesti칩n Acad칠mica" style="-fx-font-size: 14px; -fx-text-fill: #666;"/>
        </VBox>

        <Separator prefWidth="350"/>

        <!-- Formulario -->
        <VBox spacing="15" prefWidth="350">
            <!-- Usuario -->
            <VBox spacing="5">
                <Label text="Usuario" style="-fx-font-weight: bold; -fx-text-fill: #333;"/>
                <TextField fx:id="txtUsuario" promptText="Ingrese su usuario"
                           style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
            </VBox>

            <!-- Contrase침a -->
            <VBox spacing="5">
                <Label text="Contrase침a" style="-fx-font-weight: bold; -fx-text-fill: #333;"/>
                <PasswordField fx:id="txtContrasena" promptText="Ingrese su contrase침a"
                               style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
            </VBox>

            <!-- Tipo de Usuario -->
            <VBox spacing="5">
                <Label text="Tipo de Usuario" style="-fx-font-weight: bold; -fx-text-fill: #333;"/>
                <ComboBox fx:id="cmbTipoUsuario" prefWidth="350" promptText="Seleccione su rol"
                          style="-fx-pref-height: 40; -fx-font-size: 14px;"/>
            </VBox>
        </VBox>

        <!-- Mensaje -->
        <Label fx:id="lblMensaje" text="" style="-fx-font-size: 12px;"/>

        <!-- Bot칩n Ingresar -->
        <Button fx:id="btnIngresar" text="INGRESAR" onAction="#onIngresar" prefWidth="350" prefHeight="45"
                style="-fx-background-color: linear-gradient(to right, #667eea 0%, #764ba2 100%);
                       -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;
                       -fx-background-radius: 8; -fx-cursor: hand;"/>

    </VBox>

    <!-- Footer -->
    <Label text="춸 2024 Academia UQ M칰sica - Todos los derechos reservados"
           style="-fx-text-fill: white; -fx-font-size: 11px;"/>
</VBox>