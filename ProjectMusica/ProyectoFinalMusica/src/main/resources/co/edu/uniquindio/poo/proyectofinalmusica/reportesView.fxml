<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.proyectofinalmusica.ViewController.ReportesViewController"
            fitToWidth="true" fitToHeight="true" style="-fx-background-color: #f5f5f5;">
    <VBox spacing="15" style="-fx-background-color: #f5f5f5;">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

    <HBox alignment="CENTER">
        <Label text="GeneraciÃ³n de Reportes" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    </HBox>

    <Separator/>


    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
        <Label text="Seleccione el Tipo de Reporte" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <ComboBox fx:id="cmbTipoReporte" prefWidth="400" promptText="Tipo de reporte..."/>

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints minWidth="150" prefWidth="150"/>
                <ColumnConstraints minWidth="250" prefWidth="250"/>
            </columnConstraints>

            <Label text="ID Curso:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtCursoId" GridPane.columnIndex="1" GridPane.rowIndex="0"
                       promptText="Solo para reporte de asistencia" disable="true"/>

            <Label text="ID Estudiante:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtEstudianteId" GridPane.columnIndex="1" GridPane.rowIndex="1"
                       promptText="Solo para reporte individual" disable="true"/>

            <Label text="Instrumento:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
            <ComboBox fx:id="cmbInstrumento" GridPane.columnIndex="1" GridPane.rowIndex="2"
                      prefWidth="250" promptText="Seleccione instrumento" disable="true"/>

            <Label text="Nivel:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-weight: bold;"/>
            <Spinner fx:id="spnNivel" GridPane.columnIndex="1" GridPane.rowIndex="3"
                     prefWidth="250" editable="true" disable="true"/>
        </GridPane>

        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="btnGenerar" text="Generar Reporte" onAction="#onGenerar"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;"
                    prefWidth="150" prefHeight="35"/>
            <Button fx:id="btnLimpiar" text="Limpiar" onAction="#onLimpiar"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;"
                    prefWidth="150" prefHeight="35"/>
        </HBox>
    </VBox>

    <Separator/>


    <VBox VBox.vgrow="ALWAYS" spacing="10">
        <Label text="Reporte Generado" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <TextArea fx:id="txtReporte" VBox.vgrow="ALWAYS" editable="false"
                  style="-fx-font-family: 'Courier New'; -fx-font-size: 12px;"
                  promptText="Seleccione un tipo de reporte y presione 'Generar Reporte'"/>
    </VBox>

    <HBox alignment="CENTER_RIGHT">
        <Button fx:id="btnRegresar" text="Regresar" onAction="#onRegresar"
                style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold;"
                prefWidth="100"/>
    </HBox>
    </VBox>
</ScrollPane>